{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"resolveJsonModule": true,
		"outDir": "./build",
		"rootDir": ".",
		"sourceMap": true,
		"removeComments": true,
		"strict": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"alwaysStrict": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"moduleResolution": "node",
		"baseUrl": "./lib/",
		"esModuleInterop": true
	}
}
