{
	"compilerOptions": {
		"target": "es6",
		"module": "es2015",
		"outDir": "./build",                   
		"rootDir": "./lib",
		"removeComments": true,
		"strict": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"alwaysStrict": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"moduleResolution": "node",
		"baseUrl": "./lib/",
		"esModuleInterop": true
	}
}